<script>

  var btConsoleUrl;
  var merchantsIds = [
    { name: "WAVES", sandbox: "qkg7v8649whgm765", live: "2894xn6j8hyf3wqf" },
    { name: "NEXT", sandbox: "sqh9nn8w252yrynr", live: "cwcspwg65zsthydk" },
    { name: "WESKI", sandbox: "5tyrsgnfhy2fdztn", live: "ymskt9xxjqj5frmh" },
  ];
  var isLiveEnvironment = $("#flexSwitchCheckChecked").prop('checked');

  function setSelectedMerchant() {

    var merchantselectedValue = $("#bt-merchant-select").val();
    var selectedMerchant = merchantsIds.find(m => m.name == merchantselectedValue);

    if (isLiveEnvironment) {
      $("#selected-merchant-lbl").text(selectedMerchant.live);
      btConsoleUrl = `https://www.braintreegateway.com/merchants/${selectedMerchant.live}`;

    }
    else {
      $("#selected-merchant-lbl").text(selectedMerchant.sandbox);
      btConsoleUrl = `https://sandbox.braintreegateway.com/merchants/${selectedMerchant.sandbox}`;

    }


  }

  function goToConsole() {
    window.open(btConsoleUrl);

  }

  function setEnvironment() {
    $("#flexSwitchCheckChecked").prop('checked', !isLiveEnvironment);
    isLiveEnvironment = $("#flexSwitchCheckChecked").prop('checked');
    console.log(isLiveEnvironment);
    setSelectedMerchant();

  }

</script>