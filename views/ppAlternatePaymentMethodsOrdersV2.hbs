<div><a href="/">Home</a></div>
<h1>{{title}}</h1>

<button onClick="makePayment()"><img style="width:80px" src="https://www.paypalobjects.com/images/checkout/alternative_payments/paypal_sofort_black.svg"></button>
<div id="paypal-result-container"></div>
<div id="sofort-container"></div>

<script>
   function makePayment(){
    fetch(`/ppapi/order/lpm/sofort`, {
          method: "post",
        })
          .then((res) => res.json())
          .then((data) => {
            console.log(data);
            window.location.href = data.links[1].href;
          })
          .catch((err) => console.log(err));


   }
</script>

